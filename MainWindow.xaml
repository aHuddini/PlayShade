<Window x:Class="PlayShadeTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Shader Blur Test" 
        Width="800" 
        Height="600"
        WindowStartupLocation="CenterScreen"
        Background="Black">
    <Grid>
        <!-- Simple Image with blur effect applied directly -->
        <Image x:Name="TestImage"
               Stretch="UniformToFill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
        
        <!-- Simple controls -->
        <Border VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="20"
                Background="#80000000"
                Padding="20">
            <StackPanel>
            <TextBlock Text="Blur Amount:" 
                      Foreground="White"
                      Margin="0,0,0,5"/>
            <Slider x:Name="BlurSlider"
                   Minimum="0"
                   Maximum="100"
                   Value="20"
                   Width="200"
                   Margin="0,0,0,10"/>
            
            <TextBlock x:Name="BlurValueText"
                      Text="Blur: 20"
                      Foreground="White"
                      Margin="0,0,0,10"/>
            
            <Button x:Name="LoadImageButton"
                   Content="Load Image..."
                   Padding="10,5"
                   Click="LoadImageButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
